<div class="card-header">
  <div class="title" {{attr title=title }}>
    {{title}}
  </div>
  <div class="number">
    <small>#</small>
    <a class="xnumber" {{attr href=html_url}} target="_blank" title="View issue on github.com">
      {{number}}
    </a>
    {{#if pull_request}} {{#if pull_request.html_url }} <i class="ui-icon ui-icon-21 ui-icon-branch-merge"></i> {{/if}} {{/if}}
  </div>
</div>

{{#if assignee }}
  {{hb-avatar-tooltip user=assignee width="24" height="24" }}
{{/if}}

<div class="card-labels">
    {{#each cardLabels as |label|}}
      <div class="card-label-wrapper"> 
         <div {{attr class=":card-label :active :small label.customColor"}} ></div>
         <div {{attr class=":card-label :active :large label.customColor"}} >
          <span>{{label.name}}</span>
         </div>
      </div>
    {{/each}}
</div>

{{#if isLast}}
  <div class="hb-action actions-close">
    <button class="hb-button" {{attr disabled=processing}} {{action 'close' this.model bubbles=false}}>Close</button>
  </div>                                                      
{{/if}}

{{#if canArchive}}

<div class="hb-action actions-archive">
  <button class="hb-button-icon hb-button hb-button-grey" {{attr disabled=processing}} {{action "archive" this bubbles=false}}><i class="ui-icon ui-icon-box-add"></i>Archive</button>
</div>                                                      
{{/if}}

<div class="card-states">
   <img src="{{asset-path "check.png"}}" title="Issue is closed" class="hb-state-closed"/>
   <img src="{{asset-path "arrow.png"}}" class="hb-state-ready"/>
   <img src="{{asset-path "x.png"}}" class="hb-state-blocked"/>
</div>
